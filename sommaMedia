*/
#include <stdio.h>
int main()
{
    int num, n, somma = 0, cont;
    float media;
    do{
    printf("Quanti numeri vuoi inserire?\n");
    scanf("%d", &n);
    }while (n <=0);
    cont = n;  
    while(n > 0){   
        printf("Inserisci un numero\n");
        scanf("%d", &num);
        somma = somma + num;
        n--;
    }
    media = (float) somma / cont;
    printf("La somma è %d\n ", somma); 
    printf("La media è %f\n ", media);
    return 0;

}
