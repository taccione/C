#include <stdio.h>
int main(){
    //Dichiarazione delle variabili
    int costo;
    int sconto;
    int prezzoNetto;
    //char risposta;
    
    //do{
        printf("Inserire la somma di denaro: ");
    scanf("%d", &costo);
        
    if (costo <= 500) {
        sconto = costo * 0.1 ;
    } else if (costo <= 1000) {
        sconto = costo * 0.2 ;
    } else {
        sconto = costo * 0.3 ;
    }
        
    prezzoNetto = costo - sconto;
        
    printf("Lo sconto applicato è: %d\n", sconto);
    printf("Il prezzo netto è: %d\n", prezzoNetto);
    
    /*
    printf("Vuoi inserire altro denaro?(S/N):");
    scanf("%c", &risposta);

    }while(risposta == 'S');
    */
        
    return 0;
}
